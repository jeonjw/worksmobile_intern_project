<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.MyTheme.Green" parent="AppTheme">
        <item name="colorPrimary">@color/colorNaverGreen</item>
        <item name="colorPrimaryDark">@color/colorNaverGreenDark</item>
    </style>

    <style name="Theme.MyTheme.Black" parent="AppTheme">
        <item name="colorPrimary">@color/colorDarkGray</item>
        <item name="colorPrimaryDark">@color/colorDarkGrayDark</item>
    </style>

    <style name="LoginDialog" parent="Theme.AppCompat.Light.Dialog" />

</resources>
